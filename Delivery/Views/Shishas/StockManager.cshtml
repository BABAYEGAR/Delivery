@using Delivery.Data.Service.Enums
@model Delivery.Data.Objects.Entities.Shisha

@{
    ViewBag.Title = "Edit";
    string action = ViewBag.Action;
}

<h2></h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Shisha Stock Management</h4>
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.ShishaId)
        @Html.HiddenFor(model => model.AvailableQuantity)
        @Html.HiddenFor(model => model.SafetyStock)
        @Html.HiddenFor(model => model.Name)
        @Html.Hidden("action", action)
        @if (action == StockAction.Add.ToString())
        {
            <div class="form-group col-md-6">
                @Html.Label("Add Stock", new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.Editor("AddValue", new {htmlAttributes = new {@class = "form-control"}})
                </div>
            </div>
        }
        @if (action == StockAction.Remove.ToString())
        {
            <div class="form-group">
                @Html.Label("Remove Stock", new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.Editor("RemoveValue", new {htmlAttributes = new {@class = "form-control"}})
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-md-offset-10 col-md-12">
                <input type="submit" value="Update Stock" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new {@class = "btn btn-default"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}