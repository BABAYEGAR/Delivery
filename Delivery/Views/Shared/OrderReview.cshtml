@model Delivery.Data.Objects.Entities.Order
    @if (Model != null)
    {
        <div class="panel panel-info">
            <div class="panel-heading">
                Review Order
                <div class="pull-right">
                    <small><a class="afix-1" href="#">Edit Cart</a></small>
                </div>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-sm-3 col-xs-3">
                        <img class="img-responsive" src="//c1.staticflickr.com/1/466/19681864394_c332ae87df_t.jpg"/>
                    </div>
                    <div class="col-sm-6 col-xs-6">
                        <div class="col-xs-12">Item Name</div>
                    </div>
                    <div class="col-sm-3 col-xs-3 text-right">
                        <h6><span></span>@Model.Name</h6>
                    </div>
                </div>
                <div class="form-group">
                    <hr/>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <small>Unit Price</small>
                        <div class="pull-right"><span></span></div>
                    </div>
                    <div class="col-xs-12">
                        <small>Shipping</small>
                        <div class="pull-right"><span>3000</span></div>
                    </div>

                </div>
                <div class="form-group">
                    <hr/>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <strong>Order Total</strong>
                        <div class="pull-right"><span>$</span><span>@Model.TotalAmount</span></div>
                    </div>
                </div>
            </div>
        </div>
    }
